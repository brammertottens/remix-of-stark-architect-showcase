# Security-focused npm configuration
# Prevents supply chain attacks through package integrity verification

# Enforce security audits - block installations with moderate or higher vulnerabilities
audit-level=moderate

# Disable funding messages (reduces social engineering vectors)
fund=false

# Save exact versions to prevent automatic updates to compromised versions
save-exact=true

# Always use and update package-lock.json
package-lock=true

# Prevent npm-shrinkwrap.json conflicts
shrinkwrap=false

# Enforce Node.js version requirements from package.json engines field
engine-strict=true

# Prefer cached packages when available (reduces network-based attack surface)
prefer-offline=true

# Enable package signature verification (npm v8.15.0+)
sign-git-commit=true

# Strict SSL verification
strict-ssl=true
